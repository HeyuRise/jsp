<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="300">

	<properties>
		<property name="LOG_HOME">d:/log/test</property>
		<property name="INFO_FILE_NAME">info</property>
		<property name="ERROR_FILE_NAME">error</property>
	</properties>
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{36} - %msg%n" />
		</Console>
		<RollingRandomAccessFile name="MyFile"
				fileName="${LOG_HOME}/${INFO_FILE_NAME}.log" 
				filePattern="${LOG_HOME}/${INFO_FILE_NAME}-%d{yyyy-MM-dd}.log">
			<PatternLayout
				pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{36} - %msg%n" />
			<Policies>
				<TimeBasedTriggeringPolicy modulate="true" interval="1" />
			</Policies>
			<DefaultRolloverStrategy max="20" />
		</RollingRandomAccessFile>
		<!-- 配置异步打日志 -->
		<Async name="ASYNC">
			<AppenderRef ref="Console" />
			<AppenderRef ref="MyFile" />
		</Async>
	</Appenders>

	<Loggers>
		<Logger name="org.springframework" level="info">
			<AppenderRef ref="Console" />
		</Logger>
		<Logger name="com.pcbwx.ebes.dao" level="debug" additivity="false">
			<!-- 为dao mapper所在的包，level为debug -->
			<AppenderRef ref="Console" />
		</Logger>
		<Root level="info">
			<AppenderRef ref="ASYNC" />
			<!-- <AppenderRef ref="MyFile" /> -->
		</Root>
	</Loggers>
</Configuration> 